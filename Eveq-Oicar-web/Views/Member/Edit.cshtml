@model Eveq_Oicar_web.Models.Member

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_LoginPartial.cshtml";
}

<h2 class="with-font text-center " style="font-weight: 800; margin: 5em auto auto auto">Edit info: </h2>

<div class="col-md-4 centered" style="background-color: rgba(0, 0, 0, 0.3); border-radius: 25px;">
    @using (Html.BeginForm())
    {
    <div style="margin-top: 10px;" class="text-center">
        @Html.AntiForgeryToken()

        @Html.HiddenFor(model => model.UID)

        <div class="form-group">
            <label class="control-label with-font" style="font-weight: 800; font-size: large;">First Name: </label>
            <br />
            <input asp-for="FirstName" class="form-control" data-val-required="Unesi Ime." />
            <span asp-validation-for="FirstName" class="text-danger font-weight-bold"></span>
        </div>

        <div class="form-group">

            <label class="control-label with-font" style="font-weight: 800; font-size: large;">Last Name: </label>
            <br />
            <input asp-for="LastName" class="form-control" data-val-required="Unesi Prezime." />
            <span asp-validation-for="LastName" class="text-danger font-weight-bold"></span>
        </div>


        <div class="form-group">
            <input type="submit" value="Submit" class="btn btn-light" style="width: 100%;" />

        </div>

    </div>
    }
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
