@model Eveq_Oicar_web.Models.Login

@{
    ViewData["Title"] = "ForgotPassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



    <div class="col-md-4 centered" style="background-color: rgba(0, 0, 0, 0.3); border-radius: 25px;">
        <form asp-action="ForgotPassword"  style="margin-top: 10px;">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email" class="control-label with-font" style="font-weight: 800; font-size: large;"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger font-weight-bold"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Create"  class="btn btn-light" style="width: 100%;" />
            </div>
        </form>
    </div>




@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
