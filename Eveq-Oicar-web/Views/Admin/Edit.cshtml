@model Eveq_Oicar_web.Models.Event

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-md-4 centered" style="background-color: rgba(0, 0, 0, 0.3); border-radius: 25px; margin-top: 10px;">
    <form asp-action="Create" enctype="multipart/form-data" style="margin-top: 10px;">
        @using (Html.BeginForm(new { enctype = "multipart/form-data" }))
        {
            @Html.HiddenFor(model => model.IDEvent)
            @Html.HiddenFor(model => model.Location)

            <div class="form-group">
                <label asp-for="Title" class="control-label with-font" style="font-weight: 800; font-size: large;"></label>
                <input asp-for="Title" class="form-control" data-val-required="The event must have a title." />
                <span asp-validation-for="Title" class="text-danger font-weight-bold"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description" class="control-label with-font" style="font-weight: 800; font-size: large;"></label>
                @Html.TextAreaFor(model => model.Description, new { @class = "form-control", @rows = 2 })
                <span asp-validation-for="Description" class="text-danger font-weight-bold"></span>
            </div>

            <div class="form-group">
                <label asp-for="Date" class="control-label with-font" style="font-weight: 800; font-size: large;"></label>
                <input asp-for="Date" class="form-control" data-val-required="The event must have a start date." />
                <span asp-validation-for="Date" class="text-danger font-weight-bold"></span>
            </div>

            <div class="form-group">
                <label class="control-label with-font" style="font-weight: 800; font-size: large;">Location ID:</label>
                <input asp-for="LocationId" class="form-control" readonly="@(true)" />
            </div>

            <div class="form-group text-center">
                <a href="@Url.Action("CreateLocation", "Admin", new { id = Model.LocationId})" class="btn btn-light control-label with-font" style="font-weight: 800; font-size: large;">Edit Location for Event</a>
            </div>

            <div class="form-group">
                <label class="control-label with-font" style="font-weight: 800; font-size: large;">Ticket Price: (€)</label>
                <input asp-for="TicketPrice" class="form-control" data-val-required="Set the price of the event to be greater than 0" />
                <span asp-validation-for="TicketPrice" class="text-danger font-weight-bold"></span>
            </div>

            <div class="form-group">
                <label class="control-label with-font" style="font-weight: 800; font-size: large;">Image:</label>
                <br />
                <div class="form-group text-center">
                    @{
                        if (Model.PosterImage != null)
                        {
                            string imreBase64Data = Convert.ToBase64String(Model.PosterImage);
                            string imgDataURL = string.Format("data:image/png;base64,{0}", imreBase64Data);

                            <img class="text-center" src="@imgDataURL" width="200" />
                        }
                        else
                        {
                            <img class="text-center" src="~/img/No_Image_Available.jpg" width="100" />
                        }
                    }
                    <br />
                    <input name="images" type="file" class="form-control" style="margin-top:1em;" />
                    <span asp-validation-for="PosterImage" class="text-danger font-weight-bold" data-val-required="The event must have an image"></span>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Submit" class="btn button" />
            </div>
            <br />
            <div class="form-group" style="padding-bottom: 1em;">
                <a class="btn btn-light" asp-action="Index">Cancel</a>
            </div>

        }

    </form>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


<script>
    $(function () {
        $.validator.methods.date = function (value, element) {
            return this.optional(element) || moment(value, "DD.MM.YYYY", true).isValid();
        }
    });
</script>
